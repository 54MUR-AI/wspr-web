{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/index.ts",
    "src/database.ts",
    "src/middleware/error.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/services/**/*",
    "src/tests/**/*",
    "src/utils/**/*",
    "src/models/**/*",
    "src/controllers/**/*",
    "src/routes/**/*",
    "src/middleware/auth.ts",
    "src/middleware/validate-request.ts"
  ]
}
