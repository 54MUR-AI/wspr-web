# API Configuration
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Authentication
VITE_JWT_SECRET=your-jwt-secret-here

# Push Notifications
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key-here

# Media Configuration
VITE_MAX_FILE_SIZE=10485760 # 10MB in bytes
VITE_ALLOWED_FILE_TYPES=image/*,video/*,audio/*,application/pdf

# Feature Flags
VITE_ENABLE_VIDEO_CALLS=true
VITE_ENABLE_FILE_SHARING=true
VITE_ENABLE_GROUP_CHAT=true

# Analytics and Monitoring
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_ANALYTICS_ID=your-analytics-id-here

# Cache Configuration
VITE_CACHE_VERSION=1
VITE_CACHE_MAX_AGE=86400 # 24 hours in seconds
